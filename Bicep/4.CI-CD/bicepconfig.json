{
    "analyzers": {
      "core": {
        "verbose": false,
        "enabled": true,
        "rules": {
          "no-hardcoded-env-urls": {
            "level": "warning"
          },
          "no-unused-params" : {
              "level": "off" // set to error to test
          },
          "no-unused-vars" : {
              "level": "error"
          },
          "prefer-interpolation" : {
              "level": "warning"
          },
          "secure-parameter-default" : {
              "level": "error"
          },
          "simplify-interpolation" :{
              "level": "warning"
          }
        }
      }
    }
  }